{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "commands": [
            "composer install --no-dev --optimize-autoloader"
          ]
        },
        "build": {
          "commands": [
            "php artisan route:cache",
            "php artisan view:cache"
          ]
        }
      }
    }
  },
  "start": "php -S 0.0.0.0:${PORT} -t public"
}
